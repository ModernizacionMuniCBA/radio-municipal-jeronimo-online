<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.gob.gobiernoabierto.jeronimo" version="0.3.121" xmlns="http://www.w3.org/ns/widgets" 
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Radio Jerónimo</name>
    <description>
        Escuchar Radio Jerónimo
    </description>
    <author email="gobiernoabiertocba@gmail.com" href="https://gobiernoabierto.cordoba.gob.ar/">
        Secretaría de Modernización de la Ciudad de Córdoba
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">    
        <icon src="www/res/icon.png" density="ldpi" qualifier="ldpi" />
        <icon src="www/res/icon.png" density="mdpi" qualifier="mdpi" />
        <icon src="www/res/icon.png" density="hdpi" qualifier="hdpi" />
        <icon src="www/res/icon.png" density="xhdpi" qualifier="xhdpi" />

        <splash src="www/res/splash.png" density="land-ldpi" qualifier="land-ldpi" />
        <splash src="www/res/splash.png" density="land-mdpi" qualifier="land-mdpi" />
        <splash src="www/res/splash.png" density="land-hdpi" qualifier="land-hdpi" />
        <splash src="www/res/splash.png" density="land-xhdpi" qualifier="land-xhdpi" />

        <splash src="www/res/splash.png" density="port-ldpi" qualifier="port-ldpi" />
        <splash src="www/res/splash.png" density="port-mdpi" qualifier="port-mdpi" />
        <splash src="www/res/splash.png" density="port-hdpi" qualifier="port-hdpi" />
        <splash src="www/res/splash.png" density="port-xhdpi" qualifier="port-xhdpi" />

        <allow-intent href="market:*" />
    </platform>
    
</widget>